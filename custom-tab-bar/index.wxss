.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 70px;
  min-height: 70px;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  background: transparent;
  flex-direction: row;
  align-items: flex-end;
}
.tab-bg{
  background: white;
  height: 48px;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: -11;
  border-top: 1px #eee solid;
  box-shadow:0 0 8px 2px rgba(24, 60, 150, 0.1) !important;
  padding-bottom: env(safe-area-inset-bottom);
}
.tab-bg-mid{
  z-index: -12;
  border-top: 1px #eee solid;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  top: 4px;
  left: calc(50% - 25px);
  box-shadow:0 0 8px 2px rgba(24, 60, 150, 0.1) !important;
}
.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-direction: column;
  height: 48px;
  z-index: 100;
}
.tab-bar-item.isMid{
  height: 70px;
  background: transparent;
}

.tab-bar-item cover-image {
  width: 27px;
  height: 27px;
  max-width: 27px;
  max-height: 27px;
}

.tab-bar-item cover-view {
  font-size: 10px;
}
.tab-item{
  height: 48px;
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.isMid .tab-item{
  height: 70px;
}
.tab-img{
  width: 27px;
  height: 27px;
  max-width: 27px;
  max-height: 27px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.isMid .tab-img{
  width: 48px;
  height: 48px;
  max-width: 48px;
  max-height: 48px;
  border-radius: 50%;
  background: white;
}
.isMid .tab-item cover-image{
  width: 40px;
  height: 40px;
  max-width: 40px;
  max-height: 40px;
  margin-top: 1px;
}