/* pages/partner/recharge/index.wxss */
page{
  background: #f7f8fa;
}
.page{
  background: #fff;
}
.bt{
  width: calc(100% - 140rpx) !important;
}
.page .item-vi{
  width: calc(100% - 80rpx);
  min-height: 96rpx;
}
.footer-vi{
  background: #f7f8fa;
}
.cost-item{
  width: calc(50% - 15rpx);
  border: 1rpx #ededed solid;
  height: 170rpx ;
  margin:15rpx;
  float: left;
  box-sizing: border-box;
  position: relative;
}
.cost-item>image{
  display: none;
}
.cost-item.on{
  border-color: #dbaa60;
}
.cost-item.on>image{
  display: block;
}
.cost-item:nth-child(2n-1){
  margin-left: 0;
}
.cost-item:nth-child(2n){
  margin-right: 0;
}
.cost-item>view{
  height: 50%;
  width: calc(100% - 60rpx);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.cost-item .lab{
  display: block;
  text-align: center;
  height: 36rpx;
  width: 94rpx;
  border-radius: 18rpx;
}
.cost-item>view:nth-child(2){
  border-top:1rpx #eee dashed ;
  max-height: 76rpx !important;
}


.hsd-bd{
  margin-bottom: 0 !important;
  display: flex;
  flex-direction: column;
}
.hsd-bd .bank-vi{
  display: flex;
  flex-direction: column;
}
.hsd-bd .iconfont{
  width: 50rpx;
  height: 50rpx;
}
.hsd-bd .hd-vi{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 100%;
  height: 146rpx;
}
.hsd-bd .close{
  position: absolute;
  right: 0;
}
.bank-vi .item-vi{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 110rpx;
  border-bottom: 1rpx #eee solid;
}
.bank-vi .item-vi:last-child{
  border-bottom: 0;
}
.bank-vi .item-vi image{
  width: 40rpx;
  margin-right: 20rpx;
}

