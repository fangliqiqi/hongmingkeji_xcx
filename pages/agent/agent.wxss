/* pages/agent/agent.wxss */
@import "../recommend/recommend.wxss";
@import "/pages/partner/cost/index.wxss";
page{
  background: #f7f8fa;
}
.sv-vi{
  top: 0;
  left: 0;
  background: transparent;
  height: calc(100% - env(safe-area-inset-bottom));
}
.sv-vi .tabs-vi{
  border:0;
  background: #fff;
  width: 100%;
}
.sv-vi .sv{
  margin-top: 20rpx;
  height: calc(100% - 152rpx);
}
.sv-vi .svt{
  margin-top: 92rpx;
  height: calc(100% - 224rpx);
}
.sv-item{
  background: #fff;
  width: calc(100% - 80rpx);
  margin: 20rpx 0;
}
.weui-loadmore__tips {
  background-color: #f7f8fa !important;
}
.sv-item>view:nth-child(2) text{
  margin:0;
}
.sv-item>view:first-child>view {
  margin: 8rpx 36rpx;
}

.tab-vi{
  top: 112rpx;
}
.tab-vi .tabs{
  border: 0;
}
.ta-vi {
  background: #f7f8fa;
  border-radius: 5rpx;

}

.textarea-vi {
  background: #f7f8fa;
  text-align: left;
  width: 100%;
  height: 290rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

.textarea-vi>textarea {
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
}
.ta{
  color: #212429;
  font-size: 28rpx;
  
}
.taph{
  line-height: 1.5;
  color: #c8c8cc !important;
  font-size: 28rpx;
}


.picker{
  height: 100rpx;
  min-width: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.follow-item{
  display: flex;
  flex-direction: column;
  border-top: 1rpx #eee solid;
}
.follow-item:first-child{
  border: 0;
}
.alter-vi{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1;
}
.weui-dialog{
  z-index: 1000;
}