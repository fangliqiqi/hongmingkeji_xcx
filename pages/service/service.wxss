/* pages/service/service.wxss */
@import '/pages/recommend/recommend.wxss';
.sv-item{
  background: #fff !important;
  border-radius: 5rpx;
  overflow: hidden;
}
.sv-item>view:first-child{
  height: 4rpx !important;
  min-height: 4rpx;
}
.sv-item>view:nth-child(2){
  background: linear-gradient(#fff,#f7f9ff);
  height: 165rpx;
  min-height: 110rpx;
  width: 100%;
  margin: 0;
}
.sv-item>view:nth-child(2)>view{
  margin-left: 32rpx;
}
.sv-item>view:nth-child(2)>button{
  margin-right: 32rpx;
  height: 58rpx !important;
  width: 140rpx !important;
  border-radius: 5rpx;
  background: #edeff5;
}
.sv-item>view:nth-child(2)>button.bgact>text{
  color: #fff !important;
}
.sv-item>view:nth-child(3){
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sv-item>view:nth-child(3)>view{
  width: calc(100% - 64rpx);
  height: 92rpx;
  border-bottom: 1rpx #eee dashed;
}
.sv-item>view:nth-child(3)>view:last-child{
  border-bottom: 0;
}
.sv-item>view:nth-child(3)>view image{
  width: 26rpx;
  height: 22rpx;
}
.st-vi{
  border:1rpx #e15352 solid;
  border-radius: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 32rpx;
}
.st-vi text{
  color: #e15352;
  margin: auto 12rpx;
}
.st-vi.on{
  border: 1rpx #00cf9a solid;
}
.st-vi.on text{
  color: #00cf9a;
}
