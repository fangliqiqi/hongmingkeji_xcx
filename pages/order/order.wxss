/* pages/order/order.wxss */
.order-vi{
  display: flex;
  flex-direction: column;
}
.order-item{
  border-radius: 5rpx;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order-item>view:first-child{
  height: 90rpx;
  margin-top: 23rpx;
  width: 100%;
}
.order-item image{
  height: 22rpx;
}
.order-item .order-info{
  border-top: 1rpx #eeeeee solid;
  width: calc(100% - 56rpx);
  
}
.order-info>view:first-child{
  height: 146rpx;
}
.last-vi{
  width: 100%;
}
.h64{
  width: 64rpx !important;
} 