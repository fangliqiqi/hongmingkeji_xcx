/* pages/commission/commission.wxss */
@import "../recommend/recommend.wxss";
.amount-vi{
  height: 230rpx;
  background: linear-gradient(#fff,#f7f9ff);
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  position: relative;
}
.amount-vi>image{
  position: absolute;
  top: 0;
  right: 50rpx;
}
.amount-vi>view{
  display: flex;
  flex-direction: column;
}
.sv-vi .sv{
  height: calc(100% - 380rpx);
}
.sv-item{
  border-radius: 5rpx;
  border: 1rpx #eee solid;
  background: #fff;
}
.sv-item>view:first-child{
  height: 110rpx;
}
.sv-item>view:nth-child(2){
  border-top: 0.5px #eee dashed;
}
.sv-item .state{
  border: 1rpx #d15d57 solid;
  border-radius: 5rpx;
  color: #d15d57;
  background: #fffafa;
  width: 66rpx;
  height: 32rpx;
  font-size: 20rpx;
}
.sv-item .state.on{
  border: 1rpx #41cc9d solid;
  color: #41cc9d;
  background: #f5fcfa;
}
.footer-vi{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 132rpx;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-bottom: env(safe-area-inset-bottom);
}
.footer-vi .bt{
  height: 90rpx;
  width: calc(100% - 140rpx) !important;
}