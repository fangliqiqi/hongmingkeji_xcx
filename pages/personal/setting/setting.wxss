/* pages/personal/setting/setting.wxss */
page{
  background: #f7f8fa;
}
.page .bgtop{
  z-index: 1;
} 
.page .bg-vi{
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.setting-vi{
  margin-top: 150rpx;
  position: relative;
  z-index: 10;
}
.setting-vi .header-vi{
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  width: 100%;
  min-height: 340rpx;
  box-sizing: border-box;
}
.setting-vi .header-vi .header{
  border: 6rpx rgba(255, 255, 255, 0.3) solid;
  width: 176rpx;
  height: 176rpx;
  box-sizing: border-box;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: -88rpx;
}
.setting-vi .header-vi .edit{
  position: absolute;
  right: calc(50% - 72rpx);
  top: 33rpx;
  width: 50rpx;
  height: 50rpx;
}
.setting-vi .header-vi .name{
  margin-top: 110rpx;
}
.setting-vi .info label{
  display: inline-block;
  width: 1rpx;
  background: #eee;
  height: 80rpx;
}
.menu-vi{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.menu-item{
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  width: calc(100% - 50rpx);
}
.in-cl{
  border: 1rpx #eee solid;
  border-radius: 12rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: start;
  padding: 0 24rpx;
}