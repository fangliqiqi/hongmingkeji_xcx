/* pages/personal/disorder/disdetails/disdetails.wxss */
.info-vi {
  display: flex;
  flex-direction: column;
  width: calc(100% - 112rpx);
  margin: 0px auto;
}

.info-vi>view {
  min-height: 96rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx #eee solid;
}

.info-vi>view.title {
  margin-top: 30rpx;
  border-top: 0;
}

.info-vi textarea {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 3em;
  line-height: 1.5em;
  font-size: 28rpx;
}

.in-cl{
  border: 1rpx #eee solid;
  border-radius: 12rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: start;
  padding: 0 24rpx;
}

.login-vi{
  position: fixed;
  top: 50rpx;
  background: white;
  height: calc(86% - 50rpx);
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bt{
  width: 100% !important;
  height: 90rpx;
}
.code{
  height: 72rpx;
  line-height: 72rpx;
  border-bottom: 2rpx #eeeeee solid;
  box-sizing: border-box;
  width: 150rpx;
  text-align: right;
}
input{
  height: 72rpx;
  border-bottom: 2rpx #eeeeee solid;
  box-sizing: border-box;
  color: #5e5f66;
}
.wecentBor{
  padding-top: 40rpx; 
  /* background: #fff; */
  display: flex;
  flex-direction: column-reverse;
}
.weui-cell-line{
margin-left: 5px;
float: left;
 border-left: 1px solid #eeeeee;
 min-height: 120rpx;
margin-bottom: -10px;
position: relative;
}

.weui-cell-list .weui-cell-circle{
 position: absolute;
 left: -14rpx;
 top: 0px;
 background-color: #ffffff;
 width: 26rpx;
 height: 26rpx;
 border: 0;
 border-radius: 50%;
 border: 1px solid #eeeeee;
 display: flex;
 justify-content: center;
 align-items: center;
 z-index: 999;
}
.active-line{
  border-left: 1px solid #2fb69d;
}
.weui-cell-list .active-circle{
  border: 1px solid #2fb69d;
 }
 .weui-cell-circle .active{
  background-color: #2fb69d;
}

.weui-cell-circle>view{
 border-radius:50%;
 width: 14rpx;
 height: 14rpx;
 background-color: #eeeeee;
}

.weui-cell-time{
 float: left;
 font-size:14px;
 padding-left: 15px;
 width: 200rpx;}
.weui-cell-event{
  padding-left: 40rpx;
  /* width: calc(100% - 200rpx); */
  padding-bottom: 40rpx;
}
.weui-cell-list:first-child .weui-cell-line{border: 0;}