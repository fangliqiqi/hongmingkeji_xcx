@import "../../resource/style/common.wxss";

.cropper{
    position: absolute;
    top: 0;
    left: 0;
}

.cropper-buttons{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.95);
  display: flex;
  flex-direction: row;
  z-index: 1000;
  height: 108rpx;
}

.btn{
    min-height: 30px;
    line-height: 30px;
    padding: 0 24rpx;
    border-radius: 2px;
    color: #ffffff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    flex: 1;
    height: 100%;
    border-radius: 0;
}