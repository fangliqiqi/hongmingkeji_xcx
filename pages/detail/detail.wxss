.ft-bt-vi{
  width: 100%;
  background-color: #2c2c2c;
  min-height: 96rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}
.vi-bt{
  margin-bottom: 40rpx;
}
.vi-bt>image{
  width: 96rpx;
  margin-bottom: 25rpx;
  margin-top: 40rpx;
}
.share-vi{
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  justify-content: space-between;
}
.poster-vi{
  /* background: #ff0; */
  z-index: 6000;
  width: calc(100% - 104rpx);
  height: calc(100% - 410rpx);
  margin-top: 40rpx;
}

