.vi-1{
  width: 240rpx;
  min-width: 240rpx;
  height: 124rpx;
  border-top-right-radius: 64rpx;
  border-bottom-right-radius: 64rpx;
  background: linear-gradient(126deg,#f7f8fc,#edf2fa);
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  float: left;
  margin: 30rpx;
}
.vi-1>view{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: linear-gradient(-134deg,#e35935,#4d5dd0);
  font-size: 34rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  left: -25rpx;
  top: 0;
}
.vi-1>view>text{
  margin-right: 10rpx;
}
.vi-1>text{
  font-size: 30rpx;
  color: #5e5f66;
  margin-left: 44rpx;
}
.vi-4>view{
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(-43deg,#d93e36,#364db4);
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 18rpx;
}
.vi-5,.vi-15{
  width: 180rpx;
  min-width: 180rpx;
  height: 106rpx;
  border-top-right-radius: 53rpx;
  border-bottom-right-radius: 53rpx;
  border-top-left-radius: 53rpx;
  background: linear-gradient(126deg,#f7f8fc,#edf2fa);
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  float: left;
  margin:25rpx 0 25rpx 54rpx;
  box-sizing: border-box;
}
.vi-5:nth-child(3n+1){
  margin-left: 18rpx;
  width: 206rpx;
  min-width: 206rpx;
}
.vi-5>view,.vi-15>view{
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  background: linear-gradient(-134deg,#1d55a2,#01ebd2);
  font-size: 26rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  left: -19rpx;
  top: 0;
}
.vi-5:nth-child(2n-1)>view,.vi-15:nth-child(2n-1)>view{
  background: linear-gradient(-128deg,#465170,#242c45);
  opacity: 0.67;
}
.vi-5>view>text,.vi-15>view>text{
  margin-right: 8rpx;
}
.vi-5>text,.vi-15>text{
  font-size: 26rpx;
  color: #5e5f66;
  margin-left: 38rpx;
}
.vi-15{
  height: 72rpx;
  width: 230rpx;
}
.vi-15:nth-child(2n){
  width: 180rpx;
}