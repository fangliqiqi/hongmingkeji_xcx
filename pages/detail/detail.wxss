/* pages/detail/detail.wxss */
.page{
  margin-bottom: 160rpx;
}
.bt-vi{
  position: fixed;
  right: 40rpx;
  bottom: 30rpx;
  display: flex;
  flex-direction: row;
  height: 90rpx;
  width: 470rpx;
}
.bt-vi>image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}
.bt-vi>view{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.tohome-vi{
  position: fixed;
  left:  40rpx;
  bottom: 30rpx;
  display: flex;
  flex-direction: row;
  height: 90rpx;
  width: 90rpx;
}
.tohome-vi>view{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  border: 1rpx #eee solid;
  box-sizing: border-box;
  background: #fff;
}
.hsd-bd{
  margin-bottom: 0 !important;
  display: flex;
  flex-direction: column;
}
.hsd-bd .bank-vi{
  display: flex;
  flex-direction: column;
}
.hsd-bd .iconfont{
  width: 50rpx;
  height: 50rpx;
}
.hsd-bd .hd-vi{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 100%;
  height: 146rpx;
}
.hsd-bd .close{
  position: absolute;
  right: 0;
}
.item-vi{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 146rpx;
  width: 100% !important;
  padding: 0;
  background: transparent;
  /* border-bottom: 1rpx #eee solid; */
}
.item-vi image{
  width: 92rpx;
  height: 92rpx;
  margin-right: 32rpx;
}
.item-vi>image{
  width: 15rpx;
  height: 24rpx;
  margin-right: 16rpx;
 }
 .bg1e .weui-half-screen-dialog {
