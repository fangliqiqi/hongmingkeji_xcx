/* pages/form/index.wxss */
@import '/pages/share/share.wxss';
.page .bgtop{
  height: 250rpx;
}
.page .bgtop::after{
  height: 90px;
}
.tip-vi .bt{
  margin-bottom: 50rpx;
}
.info-vi{
  margin-top: 40rpx;
  min-height: 580rpx;
  width: calc(100% - 60rpx);
  z-index: 1000;
  background: linear-gradient(#fff,#f7f9ff);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.info-vi>view:first-child{
  border-bottom: 1rpx #eee dashed;
  position: relative;
  width: 100%;
}
.img-cl{
  position: absolute;
  right: 50rpx;
  top: 0;
  width: 44rpx;
}
.rr,.rl{
  position: absolute;
  border-radius: 50%;
  height: 36rpx;
  width: 36rpx;
  bottom: -18rpx;
  right: -18rpx;
}
.rr view:first-child,.rl view:first-child{
  background-color: #fff;
  border-radius: 50%;
  height: 36rpx;
  width: 36rpx;
  box-shadow: 0 0 15rpx 3rpx rgba(24, 60, 150, 0.1) inset !important;
}
.rr view:nth-child(2){
  height: 36rpx;
  width: 18rpx;
  position: absolute;
  right: 0rpx;
  top: 0;
  background: #fff;
}
.rl{
  left: -18rpx;
  right: auto;
}
.rl view:nth-child(2){
  height: 36rpx;
  width: 18rpx;
  position: absolute;
  left: 0rpx;
  top: 0;
  background: #fff;
}
.info-vi>view{
  min-height: 94rpx;
}

.upload_vi{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  
}
.upload_vi image{
  width: 300rpx;
  height: 150rpx;
}
/* 卡券样式 */
.pad30{
  padding:30rpx;
  box-sizing: border-box;
}
.order{
  border: 1rpx solid #e5e5e5;
  border-radius:6rpx;
  padding:20rpx;
  box-sizing: border-box;
}
.card{
  width:100%;
  height:198rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.card_img{
  width:100%;
  height:100%;
  position:absolute;
  top: 0;
  left: 0;
}
.card_name{
  z-index: 999;
}
.colorGray{
